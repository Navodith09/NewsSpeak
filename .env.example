# Copy this file to .env and fill in your actual values

# News API Configuration
# Get your API key from: https://newsapi.org/register
VITE_NEWS_API_KEY=your_api_key_here

# App Configuration
VITE_APP_NAME=NewsSpeak
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Modern News Reader with Voice Features

# API Configuration
VITE_API_BASE_URL=https://newsapi.org/v2
VITE_DEFAULT_COUNTRY=us
VITE_DEFAULT_LANGUAGE=en
VITE_ARTICLES_PER_PAGE=50

# Feature Flags
VITE_ENABLE_VOICE_FEATURES=true
VITE_ENABLE_BOOKMARKS=true
VITE_ENABLE_SHARING=true
# VITE_ENABLE_CACHING=true

# Cache Configuration (in milliseconds)
# VITE_CACHE_DURATION=300000
# VITE_REFRESH_INTERVAL=600000

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_THEME_PERSISTENCE=true